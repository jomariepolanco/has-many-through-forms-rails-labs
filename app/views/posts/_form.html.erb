<%= form_for @post do |f|%>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br>

    <%= f.label "Content" %><br>
    <%= f.text_field :content %><br>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, post.categories.build do |cat_fields| %>
        <%= cat_fields.label :name, "Category" %>
        <%= cat_fields.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>